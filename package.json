{
  "name": "tinyurl-app",
  "version": "1.0.0",
  "description": "Full-stack URL shortener application",
  "scripts": {
    "install": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend/tinyurl-frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend/tinyurl-frontend && npm run dev",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend/tinyurl-frontend && npm run preview",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend/tinyurl-frontend && npm run build",
    "test:connection": "node test-connection.js",
    "cleanup:urls": "cd backend && node scripts/cleanup-urls.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.13.2"
  },
  "keywords": ["url-shortener", "react", "express", "mongodb"],
  "author": "",
  "license": "ISC"
}